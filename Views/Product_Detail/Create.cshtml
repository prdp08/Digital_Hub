@model Digital_Hub.Models.Product_Detail

@{ ViewData["Title"] = "Create"; }
<style>
    body {
        background-image: url(https://images.hindustantimes.com/tech/img/2021/07/29/1600x900/Computer_7_1625598424996_1627537012527.jpg);
    }
</style>
<!--code to show the create page of the table-->
<h1>Create</h1>
<p>
    <a asp-action="Create" class="btn btn-info">Create New</a>
</p>
<div style="background-color:aliceblue;">
    <h4>Product Detail</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Product_Name" class="control-label">Product Name</label>
                    <input asp-for="Product_Name" class="form-control" />
                    <span asp-validation-for="Product_Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label">Price</label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Brand_DetailId" class="control-label">Brand Detail</label>
                    <select asp-for="Brand_DetailId" class="form-control" asp-items="ViewBag.Brand_DetailId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Category_DetailId" class="control-label">Category Detail</label>
                    <select asp-for="Category_DetailId" class="form-control" asp-items="ViewBag.Category_DetailId"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
