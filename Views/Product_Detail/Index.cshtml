@model IEnumerable<Digital_Hub.Models.Product_Detail>

@{
    ViewData["Title"] = "Index";
}
<style>
    body {
        background-image: url(https://images.hindustantimes.com/tech/img/2021/07/29/1600x900/Computer_7_1625598424996_1627537012527.jpg);
    }
</style>

<h1>Index</h1>
<!--code of the index page-->
<p>
    <a asp-action="Create" class="btn btn-info">Create New</a>
</p>
<div style="background-color:aliceblue;">
    <table class="table">
        <thead>
            <tr>
                <th>
                    Product Name
                </th>
                <th>
                    Price
                </th>
                <th>
                    Brand Detail
                </th>
                <th>
                    Category Detail
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Product_Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Price)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Brand_Detail.Brand_Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Category_Detail.Product)
    </td>
    <td>
        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
    </td>
</tr>
}
        </tbody>
    </table>
</div>